apiVersion: v1
kind: PersistentVolume
metadata:
  namespace: cep-project1
  name: test2
  labels:
    app: wp
spec:
  capacity: 
    storage: 10Gi
  accessModes:
    - ReadWriteMany
  nfs:
    server: 172.31.58.55
    path: "/nfsdata1" 

---

apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  namespace: cep-project1
  name: mypvc2
  labels:
    app: wp
spec:
  accessModes:
  - ReadWriteMany
  resources:
    requests:
     storage: 6Gi
